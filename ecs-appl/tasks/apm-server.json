[
    {
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-create-group": "true",
                "awslogs-group": "ecslogs",
                "awslogs-region": "eu-central-1",
                "awslogs-stream-prefix": "elk"
            }
        },
        "image": "612516126697.dkr.ecr.eu-central-1.amazonaws.com/apm-server-73-cd",
        "portMappings": [
           {
             "hostPort": 8200,
             "protocol": "tcp",
             "containerPort": 8200
           }
        ],
        "healthCheck": {
           "retries": 6,
           "command": [
             "CMD",
             "curl",
             "-s",
             "-f",
             "http://localhost:8200/"
           ],
           "timeout": 5,
           "interval": 30,
           "startPeriod": null
        },
        "essential": true,
        "name": "apm-server",
        "memory": 256,
        "family": "elk",
        "networkMode": "bridge",
        "requiresCompatibilities": [
            "EC2"
        ],
        "cpu": 128,
        "environment" : [
            { "name" : "ES_JAVA_OPTS", "value" : "-Xmx128m -Xms128m" },
            { "name" : "ELASTICSEARCH_HOSTS", "value" : "${target-lb-url}:80" },
            { "name" : "KIBANA-LB-URL", "value" : "${kibana-lb-url}:80" }
        ]
    }
]
