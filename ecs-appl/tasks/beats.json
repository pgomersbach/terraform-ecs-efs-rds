                "containerPath": "/hostfs/sys/fs/cgroup",
                "sourceVolume": "volume-metricbeat-cgroup"
            },
            {
                "readOnly": true,
                "containerPath": "/hostfs/proc",
                "sourceVolume": "volume-metricbeat-proc"
            }
        ],
        "image": "612516126697.dkr.ecr.eu-central-1.amazonaws.com/metricbeat-73-cd",
        "healthCheck": {
           "retries": 6,
           "command": [
             "CMD",
             "metricbeat",
             "test",
             "config"
           ],
           "timeout": 5,
           "interval": 30,
           "startPeriod": null
        },
        "essential": false,
        "name": "metricbeat",
        "user": "root",
        "family": "elk",
        "networkMode": "bridge",
        "requiresCompatibilities": [
            "EC2"
        ],
        "command": [
            "metricbeat",
            "-e",
            "-system.hostfs=/hostfs",
            "-strict.perms=false"
        ],
        "linuxParameters": {
           "capabilities": {
             "add": [
               "SYS_PTRACE"
             ]
           }
        },
        "environment": [
            { "name" : "LS_JAVA_OPTS", "value": "-Xmx128m -Xms128m" },
