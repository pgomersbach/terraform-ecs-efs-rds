[
    {
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-create-group": "true",
                "awslogs-group": "ecslogs",
                "awslogs-region": "eu-central-1",
                "awslogs-stream-prefix": "elk"
            }
        },
        "mountPoints": [
            {
                "readOnly": true,
                "containerPath": "/var/run/docker.sock",
                "sourceVolume": "volume-filebeat-sock"
            },
            {
                "readOnly": true,
                "containerPath": "/var/lib/docker/containers",
                "sourceVolume": "volume-filebeat-containers"
            },
            {
                "readOnly": true,
                "containerPath": "/var/log",
                "sourceVolume": "volume-filebeat-log"
            }
        ],
        "image": "612516126697.dkr.ecr.eu-central-1.amazonaws.com/filebeat-73-cd",
        "healthCheck": {
          "retries": 10,
          "command": [
            "CMD",
            "filebeat",
            "test",
            "config"
          ],
          "timeout": 5,
          "interval": 30,
          "startPeriod": 180
        },
        "essential": true,
        "name": "filebeat",
        "user": "root",
        "family": "elk",
        "networkMode": "bridge",
        "requiresCompatibilities": [
            "EC2"
        ],
        "command": [
            "filebeat",
            "-e",
            "-strict.perms=false"
        ],
        "environment": [
            { "name" : "LS_JAVA_OPTS", "value": "-Xmx128m -Xms128m" },
            { "name" : "ELASTICSEARCH_HOSTS", "value" : "${target-lb-url}:80" },
            { "name" : "KIBANA-LB-URL", "value" : "${kibana-lb-url}:80" }
        ]
    },
    {
        "logConfiguration": {
            "logDriver": "awslogs",
