[
    {
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-create-group": "true",
                "awslogs-group": "ecslogs",
                "awslogs-region": "eu-central-1",
                "awslogs-stream-prefix": "elk"
            }
        },
        "portMappings": [
           {
                "containerPort": 9200,
                "hostPort": 9200,
                "protocol": "tcp"
            },
            {
                "containerPort": 9300,
                "hostPort": 9300,
                "protocol": "tcp"
            }
        ],
        "mountPoints": [
            {
                "containerPath": "/esdata",
                "sourceVolume": "rexray-ebs-vol"
            }
        ],
        "image": "612516126697.dkr.ecr.eu-central-1.amazonaws.com/elasticsearch-73-cd",
        "healthCheck": {
          "retries": 10,
          "command": [
            "CMD",
            "curl",
            "-s",
            "-f",
            "http://localhost:9200/_cat/health"
          ],
          "timeout": 5,
          "interval": 30,
          "startPeriod": 120
        },
        "essential": true,
        "name": "elasticsearch",
        "memory": 4096,
        "family": "elk",
        "networkMode": "bridge",
        "requiresCompatibilities": [
            "EC2"
        ],
        "cpu": 512,
        "environment" : [
            { "name" : "ES_JAVA_OPTS", "value" : "-Xmx768m -Xms768m" },
            { "name" : "bootstrap.memory_lock", "value" : "false" }
        ]
    },
    {
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-create-group": "true",
                "awslogs-group": "ecslogs",
                "awslogs-region": "eu-central-1",
                "awslogs-stream-prefix": "elk"
            }
        },
        "image": "612516126697.dkr.ecr.eu-central-1.amazonaws.com/elasticsearch-73-cd",
        "command": [
           "/usr/local/bin/post.sh"
        ],
        "dependsOn": [
            {
                "containerName": "elasticsearch",
                "condition": "HEALTHY"
            }
        ],
        "essential": false,
        "links": [
          "elasticsearch"
        ],
        "name": "elasticsearch-post",
        "memory": 256,
        "family": "elk",
        "networkMode": "bridge",
        "requiresCompatibilities": [
            "EC2"
        ],
        "cpu": 128,
        "environment" : [
            { "name" : "ES_JAVA_OPTS", "value" : "-Xmx128m -Xms128m" }
        ]
    }
]
